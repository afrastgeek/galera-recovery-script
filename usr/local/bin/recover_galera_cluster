#!/bin/bash

highest_seqno=-1
username="root"

# Traverse through all listed host
for host in `cat < "$1" | sort -rn`
do
	# Get seqno value from grastate
	seqno=`ssh $username@$host awk '/seqno/{FS=" ";print $2}' /var/lib/mysql/grastate.dat`

	if [[ $seqno -eq -1 ]]
	then
		# Check if server is running
		ssh $username@$host mysqladmin ping &> /dev/null
		if [ $? -eq 0 ]
		then
			bootstrap_host=$host
			break
		else
			# See seqno value from log
			ssh $username@$host mysqld -wsrep-recover
			seqno_log=`awk '/Found/{FS="[:,]";s=$6}END{print s}' /var/log/mysql/error.seqno_log`
			if [[ $seqno_log -gt $highest_seqno ]]; then
				highest_seqno=$seqno
				bootstrap_host=$host
			fi
		fi
	elif [[ $seqno -gt $highest_seqno ]]
	then
		highest_seqno=$seqno
		bootstrap_host=$host
	fi
done

# Is bootstrap host is this host?
if [[ `ifconfig | grep -c $bootstrap_host` -gt 0 ]]
then
	# Bootstrap the cluster
	sed -ie "/safe_to/c\safe_to_bootstrap:\ 1" /var/lib/mysql/grastate.dat
	/etc/init.d/mysql bootstrap-pxc
else
	# Wait for bootstrap host
	while [[ `ssh $username@$host mysqladmin ping &> /dev/null` ]]
	do
		if [ $? -eq 0 ]
		then
			break
		fi
	done
fi
