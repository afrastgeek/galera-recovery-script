#!/bin/bash

highest_seqno=-1
username="root"


# Exit if cluster list file is empty
if [[ ! -s $1 ]]
then
	{ echo "File $1 is empty"; exit 1; }
fi

# Store list of host to hosts variable
declare -a hosts

count=0
for host in `cat < "$1" | sort`
do
	hosts[$((count))]=$host
	count=$((count + 1))
done

# Wait for all host to be alive
for host in ${hosts[*]}
do
	while [[ `nc -vz $host 22` ]]; do
		if [ $? -eq 0 ]
		then
			break
		fi
	done
done

# Traverse through all listed host
for host in ${hosts[*]}
do
	# Get seqno value from grastate
	seqno=`ssh $username@$host grep seqno /var/lib/mysql/grastate.dat | awk -F ' ' '{print $2}'`

	if [[ $seqno -eq -1 ]]
	then
		# Check if server is running
		ssh $username@$host mysqladmin ping &> /dev/null
		if [ $? -eq 0 ]
		then
			bootstrap_host=$host
			break
		else
			# See seqno value from log
			ssh $username@$host mysqld -wsrep-recover
			seqno_log=`cat /var/log/mysqld.log | grep Found | tail -1 | awk -F ':' '{print $6}' | awk -F ',' '{print $1}'`
			if [[ $seqno_log -gt $highest_seqno ]]; then
				highest_seqno=$seqno
				bootstrap_host=$host
			fi
		fi
	elif [[ $seqno -gt $highest_seqno ]]
	then
		highest_seqno=$seqno
		bootstrap_host=$host
	fi
done

# Is bootstrap host is this host?
if [[ `ifconfig | grep -c $bootstrap_host` -gt 0 ]]
then
	# Bootstrap the cluster
	sed -ie "/safe_to/c\safe_to_bootstrap:\ 1" /var/lib/mysql/grastate.dat
	/etc/init.d/mysql bootstrap-pxc
else
	# Wait for bootstrap host
	while [[ `ssh $username@$host mysqladmin ping &> /dev/null` ]]
	do
		if [ $? -eq 0 ]
		then
			break
		fi
	done
fi
